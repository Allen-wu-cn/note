/* miniprogram/pages/mine/mine.wxss */
 .userinfo{
  margin-top: 40rpx;
  height: 250rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.userName{
  width: 100%;
  height: 40rpx;
  margin-top: 20rpx;
  text-align: center;
}
open-data{
  font-size: 30rpx;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #c4c0c0;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin: 0 auto;
  margin-top: 50rpx;
  
}



/* 按键 */
.add{
  width:100%;
  height: 300rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.add-item{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e4e4e4;
}
.add-item-finger{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.feedback{
  margin-top: 200rpx;
}