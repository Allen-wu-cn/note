/* miniprogram/pages/addComment/addComment.wxss */
page{
  width:100%;
  height: 100%;
  
}
.comment{
  width:100%;
  height: 100%;
  
  display: flex;
  flex-direction: column;
}
.comment-uploader{
  flex:0 0 400rpx;
  margin: 20rpx 20rpx 0;
}
.comment-uploader-add{
  
  height: 400rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #e4e4e4;
}
.comment-uploader-icon{
  
  font-size: 200rpx;
  color: #bfbfbf;
  line-height: 1;
}
.comment-uploader-desc{
   color: #bfbfbf;
}
.comment-text{
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
  flex: 1;

}
.comment-uploader-img{
  height: 400rpx;
  width: 100%;
  border-radius: 20rpx;
 
}
.comment-save{
  
  margin: 10rpx;
  flex: 0 0 90rpx;
 background-color: skyblue;
 color: white;
}